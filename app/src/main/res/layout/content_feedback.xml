<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:padding="10dip">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:layout_marginBottom="7dip"
        android:layout_above="@+id/bottom_layout"
        android:id="@+id/scrollView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/back"
        android:textColor="@color/colorAccent"
        android:text="Who will going to win today&apos;s match?"
        android:id="@+id/tv_query"
        android:padding="6dip"
        android:paddingBottom="7dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:padding="4dip"

        android:src="@drawable/ic_no_of_users"
        android:layout_below="@+id/tv_query"
        android:layout_alignLeft="@+id/tv_query"
        android:layout_alignStart="@+id/tv_query" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:padding="4dip"
        android:textColor="@color/actionbar"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:text="4"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/imageView2" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:drawableLeft="@drawable/ic_download"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Attachments"
        android:background="@drawable/dotted_back"
        android:id="@+id/tv_attachments"
        android:drawableRight="@drawable/ic_attachment"
        android:textColor="@color/actionbar"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <RelativeLayout
        android:padding="7dip"
        android:layout_marginTop="7dip"
        android:layout_below="@+id/tv_attachments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/image_layout"
android:layout_marginBottom="4dip"
android:visibility="gone"
        android:gravity="center_vertical|center_horizontal"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/textView4"
            android:background="@drawable/dotted_back"
            >


            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:weightSum="2">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:background="#81BEF7"
                    android:padding="2dip"
                    android:layout_marginRight="2dip"
                    android:layout_marginBottom="2dip"
                    android:src="@drawable/img_1"
                    android:id="@+id/img_1" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_marginBottom="2dip"
                    android:padding="2dip"
                    android:layout_marginLeft="2dip"
                    android:src="@drawable/img_2"
                    android:background="#81BEF7"
                    android:id="@+id/img_2" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center|top"
                android:weightSum="2"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_weight="1"
                    android:layout_marginTop="2dip"
                    android:layout_marginRight="2dip"
                    android:padding="2dip"
                    android:background="#81BEF7"
                    android:src="@drawable/img_3"
                    android:id="@+id/img_3" />
                <ImageView
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_marginLeft="2dip"
                    android:padding="2dip"
                    android:background="#81BEF7"
                    android:layout_marginTop="2dip"
                    android:src="@drawable/img_4"
                    android:layout_weight="1"
                    android:id="@+id/img_4" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:padding="7dip"
        android:layout_marginTop="7dip"
        android:layout_below="@+id/tv_attachments"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel_add_video"

android:visibility="gone"
        android:gravity="center_vertical|center_horizontal"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/textView3"
            android:background="@drawable/dotted_back"
            android:id="@+id/linearLayout">


            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center|bottom"
                android:weightSum="2">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:background="#81BEF7"
                    android:padding="2dip"
                    android:scaleType="fitXY"
                    android:layout_marginRight="2dip"
                    android:layout_marginBottom="2dip"
                    android:src="@drawable/video_1"
                    android:id="@+id/video_1" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_marginBottom="2dip"
                    android:padding="2dip"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="2dip"
                    android:src="@drawable/video_2"
                    android:background="#81BEF7"
                    android:id="@+id/video_2" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_layout"

        android:background="@color/actionbar"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText3"
            android:layout_toLeftOf="@+id/img_Send"
            android:background="@drawable/back"

            />

        <ImageView
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:id="@+id/img_Send"
            android:padding="4dip"
            android:src="@drawable/ic_send"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



</RelativeLayout>
